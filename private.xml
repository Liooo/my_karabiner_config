<!--I should be at ~/Library/Application Support/Karabiner-->

<?xml version="1.0"?>
<root>

<!--Definite Apps-->
    <appdef>
      <appname>RUBYMINE</appname>
      <equal>com.jetbrains.rubymine</equal>
    </appdef>

    <appdef>
      <appname>GOOGLECHROME</appname>
      <equal>com.google.Chrome</equal>
    </appdef>

<!-- Definite Operations -->
    <item>
        <name>Switch between desktops with </name>
        <identifier>private.sw</identifier>
        <autogen>__KeyToKey__ KeyCode::H, ModifierFlag::COMMAND_L | ModifierFlag::SHIFT_L, KeyCode::CURSOR_LEFT, ModifierFlag::CONTROL_L </autogen>
        <autogen>__KeyToKey__ KeyCode::L, ModifierFlag::COMMAND_L | ModifierFlag::SHIFT_L, KeyCode::CURSOR_RIGHT, ModifierFlag::CONTROL_L </autogen>
        <autogen>__KeyToKey__ KeyCode::K, ModifierFlag::COMMAND_L | ModifierFlag::SHIFT_L, KeyCode::CURSOR_UP, ModifierFlag::CONTROL_L </autogen>
        <autogen>__KeyToKey__ KeyCode::J, ModifierFlag::COMMAND_L | ModifierFlag::SHIFT_L, KeyCode::CURSOR_DOWN, ModifierFlag::CONTROL_L </autogen>
    </item>
    
<!-- Over writing definitions in /Applications/Karabiner.app/Contents/Resources/replacementdef.xml -->
    <replacementdef>
      <replacementname>EMACS_MODE_IGNORE_APPS</replacementname>
      <replacementvalue>
        ECLIPSE,
        EMACS,
        REMOTEDESKTOPCONNECTION,
        TERMINAL,
        VI,
        VIRTUALMACHINE,
        X11,
        GOOGLECHROME,
        RUBYMINE
      </replacementvalue>
    </replacementdef>
</root>
